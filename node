$ npm install --save jstransformer-markdown-it

file: pug.js 
const pug = require('pug');
const fs = require('fs')
args = process.argv.slice(2);
for (arg of args) {
    fs.writeFile(arg + ".html", pug.renderFile(arg),
                 function (err){if(err)console.log(err)})
    console.log(arg + ".html")
}

